<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/txt_pessoa_nome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="Luis Gustavo"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_pessoa_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="luis@test.com.br"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        app:layout_constraintStart_toStartOf="@+id/txt_pessoa_nome"
        app:layout_constraintTop_toBottomOf="@+id/txt_pessoa_nome" />

    <TextView
        android:id="@+id/txt_pessoa_telefone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="(43)33333333"
        app:layout_constraintStart_toStartOf="@+id/txt_pessoa_email"
        app:layout_constraintTop_toBottomOf="@+id/txt_pessoa_email" />
</android.support.constraint.ConstraintLayout>